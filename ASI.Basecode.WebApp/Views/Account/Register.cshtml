@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
    <style>
        /* Ensure full-page white background */
        body {
            background-color: white; /* White background for the entire page */
            margin: 0;
            padding: 0;
        }

        .register-box {
            min-height: 100vh; /* Full viewport height */
            background-color: white; /* White background for the container */
            padding-top: 50px; /* Padding from the top */
        }

        .row {
            margin-left: 0;
            margin-right: 0; /* Ensure no padding or margin on left/right */
        }

        .col-xl-10 {
            padding-left: 0;
            padding-right: 0; /* Ensure the column does not have left/right margins */
        }

        .card {
            background-color: white; /* White background for the card */
            border: none; /* Remove card border */
        }

        .card-body {
            padding: 40px; /* Padding inside the card */
        }

        .form-outline {
            margin-bottom: 20px; /* Space between form fields */
        }

        .form-control {
            border-radius: 0.375rem; /* Rounded corners for the input fields */
        }

        .login-btn {
            background-color: #90EE90; /* Light Green background */
            border-color: #90EE90; /* Match border color */
            color: black; /* Text color */
        }

            .login-btn:hover {
                background-color: #80e080; /* Slightly darker green on hover */
                border-color: #80e080;
            }

        .text-left p {
            font-size: 24px;
            font-weight: bold; /* Bold text */
        }
    </style>
}
<div class="container py-5 h-100 register-box">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0">
                    <div class="card-body p-md-5 mx-md-4">

                        <div class="text-left">
                            <p class="mt-2">Create an Account</p>
                        </div>

                        <form method="post" action="/Account/Register">
                            <div class="form-outline mb-4">
                                <label class="form-label" for="userId">Name</label>
                                <input type="text" id="userId" class="form-control"
                                       asp-for="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="name">Email</label>
                                <input type="text" id="name" class="form-control"
                                       asp-for="DisplayName" />
                                <span asp-validation-for="DisplayName" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" for="password">Password</label>
                                <input type="password" id="password" class="form-control"
                                       asp-for="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label class="form-label" for="confirmpassword">Confirm Password</label>
                                <input type="password" id="confirmpassword" class="form-control"
                                       asp-for="ConfirmPassword" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="text-center pt-1 mb-5 pb-1 d-flex flex-column align-items-center">
                                <button class="btn btn-block login-btn mb-3" type="submit">
                                    Create Account
                                </button>
                                <p>
                                <span>Already have an Account?</span>
                                    <a asp-controller="Account" asp-action="Login" style="color:#28a745;">
                                    Login
                                </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
